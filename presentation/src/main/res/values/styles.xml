<resources>

  <!-- Base application theme. -->
  <style name="Theme.InstaSearch.ViewMainHeader">
    <item name="android:padding">@dimen/activity_vertical_margin</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="Theme.InstaSearch.ProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:visibility">visible</item>
  </style>

  <style name="Theme.InstaSearch.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="Theme.InstaSearch.TextViewHeader">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/header_margin</item>
    <item name="android:textSize">@dimen/header_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@android:color/background_light</item>
  </style>

  <style name="Theme.InstaSearch.TextViewTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/header_margin</item>
    <item name="android:textStyle">bold</item>
  </style>


  <!-- ****** -->
  <!-- GENERAL STUFF STYLES -->
  <!-- ****** -->
  <style name="MarginPoint">
    <item name="android:layout_width">match_parent</item>
  </style>

</resources>
